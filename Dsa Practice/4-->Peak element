https://www.geeksforgeeks.org/problems/peak-element/1?page=1&category=Arrays&difficulty=Basic&sortBy=submissions

<Ans><=>

class Solution {

    public int peakElement(int[] arr) {
        // code here
        int max = 0;
        int imax = 0;
        for(int i = 1; i < arr.length; i++){
            if(arr[i] > arr[i-1])
            {
                max = arr[i];
                imax = i;
            }
        }
        return imax;
    

    }
}
